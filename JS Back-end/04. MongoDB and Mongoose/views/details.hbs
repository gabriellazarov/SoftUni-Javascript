<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}">
<div class="details">
  <p><span>Description:</span> {{description}}</p>
  <p><span>Difficulty level:</span> {{difficulty}}</p>
  <a style="width:38%" class="btn" href="/">Back</a>
  <a style="width:38%" class="btn" href="/edit/{{id}}">Edit</a>
</div>
<div class="details">
  <form action="/comments/{{id}}/create" method="POST">
    <span>Your name:</span><input type="text" name="author"><br>
    <span>Comment:</span><br>
    <textarea name="content"></textarea>
    <input type="submit" value="Post comment">
  </form>
  {{#each comments}}
  <article>
    <header>{{author}}</header>
    <p>{{content}}</p>
  </article>
  {{else}}
  <span style="font-style: italic;">No comments yet. Be the first!</span>
  {{/each}}
</div>